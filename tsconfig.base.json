{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wkpcamer/actions": ["libs/services/src/index.ts"],
      "@wkpcamer/auth": ["libs/shared/src/lib/auth-utils/index.ts"],
      "@wkpcamer/config": ["libs/config/src/index.ts"],
      "@wkpcamer/localstorage": ["libs/localstorage/src/index.ts"],
      "@wkpcamer/models": ["libs/common/src/index.ts"],
      "@wkpcamer/services": ["libs/common/services/src/index.ts"],
      "@wkpcamer/services/articles": ["libs/articles/src/index.ts"],
      "@wkpcamer/shared": ["libs/shared/src/index.ts"],
      "@wkpcamer/shared/*": ["libs/shared/src/lib/*"],

      "@wkpcamer/ui": ["libs/ui/src/index.ts"],
      "@wkpcamer/users": ["libs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
